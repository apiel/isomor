{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist-server",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "src/!server",
    "src-isomor"
  ],
  "include": [
    "src/server"
  ]
}